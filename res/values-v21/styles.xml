<resources>
    <style name="LoginTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/loginBackgroundColor</item>
        <item name="android:navigationBarColor">#4480FA</item>
        <item name="android:colorPrimaryDark">#0b2e60</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_material</item>
        <item name="android:fastScrollTrackDrawable">@drawable/fastscroll_track_material</item>
        <item name="colorPrimaryDark">#0b2e60</item>
        <item name="android:textColorHighlight">@color/light_blue</item>
    </style>

    <style name="LoginThemeSpinner" parent="LoginTheme">
        <item name="colorAccent">#fff</item>
        <item name="android:colorAccent">#fff</item>
    </style>

    <style name="ImageViewerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:colorAccent">#fff</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="messageTxt">
        <item name="android:imeOptions">flagNoExtractUi|actionSend</item>
    </style>

    <style name="Widget.Styled.ImageButton" parent="android:Widget.Material.Light.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ProgressBarLogin" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/loginTopBackgroundColor</item>
        <item name="android:navigationBarColor">@color/loginTopBackgroundColor</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>