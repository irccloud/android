<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
    </style>
    <style name="PrefsTheme" parent="@style/AppTheme"/>
    <style name="DialogTheme" parent="@android:style/Theme.Holo.Dialog"/>
    <style name="ImageViewerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="messageTxt">
        <item name="android:imeOptions">flagNoExtractUi|actionSend</item>
    </style>
    <style name="ProgressBarLogin" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/login_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/login_progress_indeterminate_horizontal_holo_dark</item>
    </style>
</resources>