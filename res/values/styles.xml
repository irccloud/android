<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
	    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorAccent">#888</item>
        <item name="colorPrimaryDark">#000</item>
    </style>
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLogin</item>
        <item name="android:windowBackground">@color/loginBackgroundColor</item>
        <item name="colorPrimaryDark">#0b2e60</item>
    </style>
    <style name="PrefsTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">?attr/actionBarSize</item>
        <item name="android:windowTitleBackgroundStyle">@style/PrefsWindowTitleBackground</item>
        <item name="colorPrimary">#888</item>
        <item name="colorAccent">#888</item>
        <item name="colorPrimaryDark">#000</item>
    </style>
    <style name="PrefsWindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0px</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog"/>
    <style name="ImgurAuthTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#888</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
    </style>
    <style name="ImageViewerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#888</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarMain</item>
    </style>
    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>
	<style name="EditEventCustomActionButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditEventCustomActionButtonImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="EditEventCustomActionButtonText" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:padding">4dp</item>
	</style>
	
    <style name="NotificationText">
      <item name="android:textColor">#000</item>
    </style>
    <style name="NotificationTitle">
      <item name="android:textColor">#000</item>
      <item name="android:textStyle">bold</item>
    </style>

    <style name="messageTxt">
        <item name="android:imeOptions">actionSend</item>
    </style>

    <style name="ProgressBarLogin" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/login_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/login_progress_indeterminate_horizontal_holo_dark</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    <style name="ProgressBarMain" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/main_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/main_progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="Widget.Styled.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@null</item>
    </style>
</resources>